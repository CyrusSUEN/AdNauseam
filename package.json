{
    "name": "adnauseam",
	  "main": "lib/main.js",
    "fullName": "AdNauseam",
    "id": "adnauseam@rednoise.org",
    "description": "An artware intervention to defend against surveillance and tracking by advertising networks",
    "author": "Daniel C. Howe",
    "license": "GPLv3 (http://www.gnu.org/licenses/)",
    "icon": "data/img/adn_active-48.png",
    "icon64": "data/img/adn_active-64.png",
    "version": "1.305",
    "homepage": "http://adnauseam.io",
    "permissions": { 
        "private-browsing": true,
        "cross-domain-content": [ 
            "http://tpc.googlesyndication.com", 
            "https://tpc.googlesyndication.com",
            "http://googleads.g.doubleclick.net", 
            "http://secure-us.imrworldwide.com",
            "http://static.ak.facebook.com",
            "https://s-static.ak.facebook.com",
            "http://ads-static.saymedia.com",
            "https://platform.twitter.com",
            "http://adserver.adtechus.com",
            "http://creative.wwwpromoter.com",
            "http://bcp.crwdcntrl.net",
            "http://www.facebook.com",
            "https://www.youtube.com",
            "http://s7.addthis.com",
            "http://cdn.cxense.com",
            "http://us-u.openx.net",
            "http://livestream.com",
            "http://wa.gtimg.com",
            "https://s.yimg.com",
            "http://x.jd.com/"
        ]
    },
    "preferences": [
    {
        "title": "Enabled",
        "name":  "enabled",
        "type":  "bool",
        "value":  true,
        "hidden": true
    },
    {
        "title": "Disable Referrer header (for AdNauseam clicks)",
        "name":  "disableOutgoingReferer",
        "type":  "bool",
        "value":  true,
        "hidden": true
    },		
    {
        "title": "Disallow outgoing cookies (for AdNauseam clicks)",
        "name":  "disableOutgoingCookies",
        "type":  "bool",
        "value":  true,
        "hidden": true
    },		
    {
        "title": "Disallow incoming cookies (for AdNauseam clicks)",
        "name":  "disableIncomingCookies",
        "type":  "bool",
        "value":  true,
        "hidden": true
    },
    {
        "title": "Logging Disabled  (no logs will be created)",
        "name": "disableLogs",
        "type": "bool",
        "value": false,
        "hidden": true
    },
    {
        "title": "Clear Ads with browser history",
        "name": "clearAdsWithHistory",
        "type": "bool",
        "value": false,
        "hidden": true
    },
    {
        "title": "Hide Ad count on icon",
        "name": "hideBadge",
        "type": "bool",
        "value": false,
        "hidden": true
    }]
}
